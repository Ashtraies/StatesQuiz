<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/frag_bg">
	<TextView
		android:id="@+id/state_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:textColor="@color/learn_name"
		android:textSize="30sp"/>
	<TableLayout
		android:id="@+id/table"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/state_name"
		android:layout_centerHorizontal="true"
		android:layout_margin="10dp">
		<TableRow>
			<TextView
				style="@style/table_label"
				android:text="Capital"/>
			<TextView
				android:id="@+id/state_capital"
				style="@style/table_content"/>
		</TableRow>
		<TableRow>
			<TextView
				style="@style/table_label"
				android:text="Abbreviation"/>
			<TextView
				android:id="@+id/state_abbreviation"
				style="@style/table_content"/>
		</TableRow>
		<TableRow>
			<TextView
				style="@style/table_label"
				android:text="Population"/>
			<TextView
				android:id="@+id/state_population"
				style="@style/table_content"/>
		</TableRow>
	</TableLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/table"
		android:orientation="vertical"
		android:padding="10dp">
		<ImageView
			android:id="@+id/learn_flag"
			android:layout_width="match_parent"
			android:layout_height="160dp"/>
		<ImageView
			android:id="@+id/learn_loc"
			android:layout_marginTop="15dp"
			android:layout_width="match_parent"
			android:layout_height="160dp"/>
	</LinearLayout>
</RelativeLayout>