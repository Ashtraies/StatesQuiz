<LinearLayout
    android:id="@+id/fw_dialog_base_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:layout_marginTop="60dp"
	android:layout_marginBottom="60dp"
	android:background="#ffffff"
	android:orientation="vertical">
	<TextView
		android:id="@+id/fw_dialog_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:visibility="gone"
		android:textColor="@color/fw_dialog_main_color"
		android:textSize="22sp" />
	<View
		android:id="@+id/fw_dialog_title_line"
		android:layout_width="fill_parent"
		android:layout_height="3dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:visibility="gone"
		android:background="@color/fw_dialog_main_color" />
	<FrameLayout
		android:id="@+id/fw_dialog_content_view"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:minWidth="200dp"
		android:minHeight="50dp" />
	<View
		android:id="@+id/fw_dialog_btns_line"
		android:layout_width="fill_parent"
		android:layout_height="0.5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:visibility="gone"
		android:background="@color/fw_dialog_main_color" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/fw_dialog_btn_one"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:background="@drawable/fw_dialog_btn_selector"
			android:gravity="center"
			android:layout_weight="1"
			android:textSize="16sp"
			android:visibility="gone"
			android:textColor="#000"
			android:textStyle="bold" />
		<View
			android:id="@+id/fw_dialog_btn_line"
			android:layout_width="0.5dp"
			android:layout_height="fill_parent"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:visibility="gone"
			android:background="@color/fw_dialog_main_color" />
		<TextView
			android:id="@+id/fw_dialog_btn_two"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:background="@drawable/fw_dialog_btn_selector"
			android:gravity="center"
			android:layout_weight="1"
			android:textSize="16sp"
			android:visibility="gone"
			android:textColor="#000"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>