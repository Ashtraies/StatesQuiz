<resources>
	<style name="portal_text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:onClick">skip</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">28sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/portal_text_color</item>
	</style>

	<style name="title_index">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:background">@color/title_index_bg</item>
		<item name="android:textSize">26sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/portal_text_color</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="table_label">
		<item name="android:layout_width">115dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/learn_label</item>
		<item name="android:fontFamily">serif</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginLeft">32dp</item>
	</style>

	<style name="table_content">
		<item name="android:layout_width">200dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/learn_content</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_marginLeft">32dp</item>
	</style>

	<style name="quiz_title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/quiz_title</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	<style name="table_image">
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">150dp</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	<style name="table_answer" parent="table_label">
		<item name="android:layout_width">140dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FF22A8C6</item>
		<item name="android:textSize">22sp</item>
		<item name="android:layout_marginLeft">10dp</item>
	</style>

	<style name="result_num">
		<item name="android:layout_width">90dp</item>
		<item name="android:layout_height">90dp</item>
		<item name="android:textSize">40sp</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textAlignment">center</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:fontFamily">serif-monospace</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="flipper">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">580dp</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_margin">5dp</item>
	</style>
</resources>
